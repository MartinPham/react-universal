{
	"name": "react-universal",
	"version": "0.1.0",
	"homepage": "https://martinpham.gitlab.io/react-universal",
	"scripts": {
		"start": "npm run browser:dev",
		"browser:dev": "cross-env NODE_PATH=src craco start",
		"browser:build": "touch .building && rm -rf build && rm -rf build-browser && cross-env NODE_PATH=src craco build && mv build build-browser && rm .building",
		"browser:test": "cross-env NODE_PATH=src craco test",
		"browser:prod:run": "node scripts/browser/prod 3000",
		"browser:prod": "npm run browser:build && npm run browser:prod:run",
		"browser:deploy:github": "npm run browser:build && gh-pages -d build-browser",
		"server:build": "touch .building && rm -rf build && rm -rf build-server && cross-env NODE_PATH=src node scripts/server/build && mv build build-server && rm .building",
		"server:build:all": "touch .building-all && npm run server:build && npm run browser:build && rm .building-all",
		"server:prod:run": "node scripts/server/prod 3000",
		"server:prod": "npm run server:build:all && npm run server:prod:run"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"private": true,
	"dependencies": {
		"history": "^4.10.1",
		"immutable": "^4.0.0-rc.12",
		"query-string": "^6.8.3",
		"react": "^16.10.2",
		"react-dom": "^16.10.2",
		"react-frontload": "^1.1.0",
		"react-helmet": "^5.2.1",
		"react-loadable": "^5.5.0",
		"react-native": "https://github.com/expo/react-native/archive/sdk-35.0.0.tar.gz",
		"react-redux": "^7.1.1",
		"react-router": "^5.1.2",
		"react-transition-group": "^4.3.0",
		"redux": "^4.0.4",
		"redux-saga": "^1.1.1",
		"reselect": "^4.0.0",
		"styled-components": "^4.4.0"
	},
	"devDependencies": {
		"@craco/craco": "^5.5.0",
		"chokidar": "^3.2.1",
		"clear-module": "^4.0.0",
		"cookie-parser": "^1.4.4",
		"cross-env": "^6.0.3",
		"find-free-port": "^2.0.0",
		"gh-pages": "^2.1.1",
		"node-sass": "^4.12.0",
		"npm-run": "^5.0.1",
		"qrcode-terminal": "^0.12.0",
		"react-scripts": "^3.2.0",
		"reactotron-react-js": "^3.3.4",
		"webpack-node-externals": "^1.7.2",
		"ws": "^7.1.2"
	}
}
